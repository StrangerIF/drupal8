{
  "name": "drupal/drupal",
  "description": "Drupal is an open source content management platform powering millions of websites and applications.",
  "type": "project",
  "license": "GPL-2.0+",
  "require": {
    "davidbarratt/custom-installer": "~1.0",
    "drupal/core": "~8.0",
    "drupal/xero": "~8.0",
    "drupal/omnipay": "~8.0",
    "davidbarratt/test1": "~8.0",
    "davidbarratt/test2": "~8.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:davidbarratt/drupal-core.git"
    },
    {
      "type": "composer",
      "url": "http://davidwbarratt.com"
    },
    {
        "type": "vcs",
        "url": "https://github.com/mradcliffe/xerobundle"
    }
  ],
  "config": {
    "preferred-install": "dist",
    "autoloader-suffix": "Drupal8"
  },
  "extra": {
    "custom-installer": {
      "drupal-core": "core"
    },
    "_readme": [
      "This is an example file to show how a Drupal website can be managed via",
      "Composer. It does not work out of the box but requires a Git subtree",
      "split of the core directory to be added to the repositories",
      "section above."
    ]
  }
}
